.navbar.navbar-default.navbar-fixed-top role="navigation" 
  .container
    .navbar-header
      button.navbar-toggle data-target=".navbar-collapse" data-toggle="collapse" type="button" 
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      = link_to "Крыминфоком", root_path, class: "navbar-brand"
    .navbar-collapse.collapse.navbar-right
      ul.nav.navbar-nav
        li
          = link_to "Новости", news_index_path, class: current_page?(news_index_path) && 'active'
        li.dropdown
          a.dropdown-toggle data-toggle="dropdown" href="#"
            | О компании
            b.caret
          ul.dropdown-menu.active
            - StaticPage.all.limit(4).each do |sp|
              li = link_to sp.title, "/#{sp.slug}", class: current_page?("/#{sp.slug}") && 'active' 
        li.dropdown
          a.dropdown-toggle data-toggle="dropdown" href="#" 
            | Услуги и цены
            b.caret
          ul.dropdown-menu.active
            - Service.all.each do |s| 
              li = link_to s.name, service_path(s.to_param)
        li.dropdown
          a.dropdown-toggle data-toggle="dropdown" href="#"
            | Оплата
            b.caret
          ul.dropdown-menu.active
            - Payment.all.each do |pay|
              li = link_to pay.title, payment_path(pay.to_param) 
        li.dropdown
          a.dropdown-toggle data-toggle="dropdown" href="#" 
            | Для клиентов
            b.caret
          ul.dropdown-menu.active
            li = link_to "Личный кабинет", "http://billing.crimeainfo.com/"
        - StaticPage.where(id: 6).each do |sp|
          li= link_to sp.title, "/#{sp.slug}", class: current_page?("/#{sp.slug}") && 'active'
        - StaticPage.where(id: 5).each do |sp|
          li= link_to sp.title, "/#{sp.slug}", class: current_page?("/#{sp.slug}") && 'active'